<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zeel_bg">


    <ImageView
        android:id="@+id/av_clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/clouds" />

    <ImageView
        android:id="@+id/av_butterfly"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/butterfly" />

    <ImageView
        android:id="@+id/av_bee"
        android:layout_width="89dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="295dp"
        android:layout_marginTop="61dp"
        app:srcCompat="@drawable/bee"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/av_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/av_bee"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/close" />

    <ImageView
        android:id="@+id/av_character"
        android:layout_width="458dp"
        android:layout_height="680dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/shirtless_avatar" />

    <ImageView
        android:id="@+id/av_character_shulk"
        android:layout_width="458dp"
        android:layout_height="680dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/aligned_shulk"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/av_character_ice"
        android:layout_width="458dp"
        android:layout_height="680dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/aligned_ice"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/av_lltv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/av_character">

        <TextView
            android:id="@+id/av_head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/av_character"
            android:fontFamily="@font/justthewayyouare"
            android:text="Head"
            android:textSize="60dp"
            />

        <TextView
            android:id="@+id/av_shirt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/av_head_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/av_character"
            android:fontFamily="@font/justthewayyouare"
            android:text="@string/shirt"
            android:textSize="60dp"
            />

        <TextView
            android:id="@+id/av_pants_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/av_shirt_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/av_character"
            android:layout_toRightOf="@+id/av_character"
            android:fontFamily="@font/justthewayyouare"
            android:text="@string/pants"
            android:textSize="60dp"
            />

        <TextView
            android:id="@+id/av_all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/av_pants_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/av_character"
            android:fontFamily="@font/justthewayyouare"
            android:text="All"
            android:textSize="60dp"
            />

    </LinearLayout>


    <ScrollView
        android:id="@+id/av_head_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/av_lltv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/av_character"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView1.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />

            <ImageView
                android:id="@+id/imageView1.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />

            <ImageView
                android:id="@+id/imageView1.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />

            <ImageView
                android:id="@+id/imageView1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />

            <ImageView
                android:id="@+id/imageView1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />
        </LinearLayout>


    </ScrollView>

    <ScrollView
        android:id="@+id/av_shirt_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/av_lltv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/av_character"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shirtstemp" />

            <ImageView
                android:id="@+id/imageView2.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shirtstemp" />

            <ImageView
                android:id="@+id/imageView2.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shirtstemp" />

            <ImageView
                android:id="@+id/av_shulk_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                app:srcCompat="@drawable/shulk_shirt" />

            <ImageView
                android:id="@+id/av_ice_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                app:srcCompat="@drawable/ice_shirt" />
        </LinearLayout>


    </ScrollView>

    <ScrollView
        android:id="@+id/av_pants_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/av_lltv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/av_character"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView3.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />

            <ImageView
                android:id="@+id/imageView3.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />

            <ImageView
                android:id="@+id/imageView3.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />

            <ImageView
                android:id="@+id/imageView3.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />

            <ImageView
                android:id="@+id/imageView3.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />
        </LinearLayout>


    </ScrollView>

    <ScrollView
        android:id="@+id/av_all_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/av_lltv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/av_character"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />

            <ImageView
                android:id="@+id/imageView4.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />

            <ImageView
                android:id="@+id/imageView4.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />

            <ImageView
                android:id="@+id/imageView4.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />

            <ImageView
                android:id="@+id/imageView4.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head_placeholder" />

            <ImageView
                android:id="@+id/imageView4.6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shirtstemp" />

            <ImageView
                android:id="@+id/imageView4.7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shirtstemp" />

            <ImageView
                android:id="@+id/imageView4.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shirtstemp" />

            <ImageView
                android:id="@+id/imageView4.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shirtstemp" />

            <ImageView
                android:id="@+id/imageView4.10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shirtstemp" />


            <ImageView
                android:id="@+id/imageView4.11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />

            <ImageView
                android:id="@+id/imageView4.12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />

            <ImageView
                android:id="@+id/imageView4.13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />

            <ImageView
                android:id="@+id/imageView4.14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />

            <ImageView
                android:id="@+id/imageView4.15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pantstemp" />
        </LinearLayout>


    </ScrollView>


</RelativeLayout>