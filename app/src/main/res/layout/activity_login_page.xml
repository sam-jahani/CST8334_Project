<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:background="@drawable/zeel_bg">

    <ImageView
        android:id="@+id/proImgBee"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="924dp"
        android:layout_marginTop="232dp"
        android:src="@drawable/bee_talking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logImgTitle"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:src="@drawable/login_label"
            android:layout_marginStart="400dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/logTxtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login: "
            android:textSize="40dp"
            android:layout_marginStart="480dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/logEdtLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Login Name"
            android:layout_marginStart="480dp"/>

        <TextView
            android:id="@+id/logTxtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:textSize="40dp"
            android:layout_marginStart="480dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/logEdtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:layout_marginStart="480dp"/>

        <Button
            android:id="@+id/logBtnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@color/bgActs"
            android:layout_marginStart="480dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/logBtnNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create new user"
            android:background="@color/bgActs"
            android:layout_marginStart="480dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>