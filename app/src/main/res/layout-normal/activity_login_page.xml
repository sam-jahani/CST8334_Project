<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:background="@drawable/zeel_bg">

    <ImageView
        android:id="@+id/proImgBee"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/bee_talking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/logImgTitle"
            android:layout_width="389dp"
            android:layout_height="27dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/login_label" />

        <TextView
            android:id="@+id/logTxtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:text="Login: "
            android:textSize="10dp" />

        <EditText
            android:id="@+id/logEdtLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:hint="Login Name"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/logTxtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:text="Password: "
            android:textSize="10dp" />

        <EditText
            android:id="@+id/logEdtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="10dp" />

        <Button
            android:id="@+id/logBtnLogin"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:background="@color/bgActs"
            android:text="Login"
            android:textSize="10dp" />

        <Button
            android:id="@+id/logBtnNew"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:background="@color/bgActs"
            android:text="Create new user"
            android:textSize="10dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>