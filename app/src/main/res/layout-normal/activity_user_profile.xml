<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zeel_bg"
    tools:context=".UserProfile"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/proImgTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="448dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/zeel_label" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/proConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/proLinear">


                <ImageView
                    android:id="@+id/proImgBack"
                    android:layout_width="280dp"
                    android:layout_height="245dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/zeel_profilebg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/proTxtNameTab"
                    android:layout_width="106dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="72dp"
                    android:text="@string/app_name"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/proImgAvatar"
                    android:layout_width="129dp"
                    android:layout_height="146dp"
                    android:layout_marginStart="84dp"
                    android:layout_marginTop="112dp"
                    android:src="@drawable/zeel_character_portrait"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/proBtnCustom"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/zeel_icon_customize"
                    tools:layout_editor_absoluteX="68dp"
                    tools:layout_editor_absoluteY="24dp" />

                <ImageView
                    android:id="@+id/proImgBadges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="472dp"
                    android:layout_marginTop="308dp"
                    android:src="@drawable/zeel_badges_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/proTxtLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="192dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="275dp"
                    android:text="Level 1"
                    android:textSize="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/proProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="200dp"
                    android:max="10"
                    android:minWidth="300dp"
                    android:minHeight="25dp"
                    android:progress="0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="100dp" />

                <TextView
                    android:id="@+id/proTxtProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="100dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/proBtnHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="570dp"
                    android:src="@drawable/zeel_icon_home"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/proBtnProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="276dp"
                    android:layout_marginTop="570dp"
                    android:src="@drawable/zeel_icon_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/proBtnActs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="520dp"
                    android:layout_marginTop="570dp"
                    android:src="@drawable/zeel_icon_acts"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/proLinear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/proTxtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="Name : "
                    android:textSize="40dp" />

                <EditText
                    android:id="@+id/proEdtName"
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:hint="Full Name"
                    android:imeOptions="actionDone"
                    android:inputType="none"
                    android:textSize="30dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/proTxtAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age     : "
                    android:textSize="40dp" />

                <EditText
                    android:id="@+id/proEdtAge"
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:inputType="none"
                    android:textSize="30dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/proTxtGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade : "
                    android:textSize="40dp" />

                <EditText
                    android:id="@+id/proEdtGrade"
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:hint="Grade"
                    android:inputType="none"
                    android:textSize="30dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/proTxtAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="About : "
                    android:textSize="40dp" />

                <EditText
                    android:id="@+id/proEdtAbout"
                    android:layout_width="450dp"
                    android:layout_height="150dp"
                    android:gravity="top"
                    android:hint="About"
                    android:inputType="none"
                    android:textSize="30dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/proBtnEdit"
                        android:layout_width="53dp"
                        android:layout_height="59dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/zeel_icon_edit" />

                    <ImageButton
                        android:id="@+id/proBtnSave"
                        android:layout_width="53dp"
                        android:layout_height="59dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bgActs"
                        android:src="@drawable/zeel_icon_save" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/proImgBee"
                android:layout_width="201dp"
                android:layout_height="208dp"
                android:layout_gravity="center"
                android:src="@drawable/zeel_bee3" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>