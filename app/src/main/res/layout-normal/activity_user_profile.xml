<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zeel_bg"
    tools:context=".UserProfile"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/proImgTitle"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:src="@drawable/zeel_label"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/proConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@+id/proLinear">


                <ImageView
                    android:id="@+id/proImgBack"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/zeel_profilebg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/proTxtNameTab"
                    android:layout_width="55dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="50dp"
                    android:textSize="6dp"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/proImgAvatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="75dp"
                    android:src="@drawable/zeel_character_portrait"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/proBtnCustom"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/zeel_mobile_icon_customize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/proImgBadges"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="205dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/zeel_badges_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/proTxtLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="130dp"
                    android:text="Level 1"
                    android:textSize="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/proProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="160dp"
                    android:max="10"
                    android:minWidth="100dp"
                    android:minHeight="10dp"
                    android:progress="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/proTxtProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="6dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="161dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/proBtnHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="220dp"
                    android:src="@drawable/zeel__mobile_icon_home"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/proBtnProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="220dp"
                    android:src="@drawable/zeel_mobile_icon_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/proBtnActs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="240dp"
                    android:layout_marginTop="220dp"
                    android:src="@drawable/zeel_mobile_icon_acts"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/proLinear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/proTxtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Name : "
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/proEdtName"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="Full Name"
                    android:imeOptions="actionDone"
                    android:inputType="none"
                    android:textSize="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <TextView
                    android:id="@+id/proTxtAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age     : "
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/proEdtAge"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:inputType="none"
                    android:textSize="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <TextView
                    android:id="@+id/proTxtGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade : "
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/proEdtGrade"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Grade"
                    android:inputType="none"
                    android:textSize="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <TextView
                    android:id="@+id/proTxtAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="About : "
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/proEdtAbout"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:gravity="top"
                    android:hint="About"
                    android:inputType="none"
                    android:textSize="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/proBtnEdit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/colorAccent"
                        android:src="@drawable/zeel_mobile_icon_edit" />

                    <ImageButton
                        android:id="@+id/proBtnSave"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/bgActs"
                        android:src="@drawable/zeel_mobile_icon_save" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/proImgBee"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/zeel_bee3" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>